<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.Employee" table="employee" schema="survey">
        <id name="empId">
            <column name="emp_id" sql-type="int(11)"/>
        </id>
        <property name="empName">
            <column name="emp_name" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="empAge">
            <column name="emp_age" sql-type="int(11)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>